{
  "manifest_version": 3,
  "name": "TikTok Oracle Native",
  "version": "1.0",
  "description": "Bridge from TikTok to C++ Native Host",
  "permissions": [
    "activeTab",
    "scripting",
    "nativeMessaging" 
  ],
  "host_permissions": [
    "*://*.tiktok.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["*://*.tiktok.com/*"]
    }
  ],
  "action": {}
}